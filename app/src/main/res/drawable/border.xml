<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Padding -->
    <item>
        <shape>
            <stroke
                android:width="10dp"
                android:color="#00FFFFFF"/>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
        </shape>
    </item>
    <!-- End of Padding-->

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:top="0dp"
                android:right="0dp"
                android:bottom="2dp"
                android:left="0dp"/>
            <solid android:color="#00CCCCCC"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:top="0dp"
                android:right="0dp"
                android:bottom="2dp"
                android:left="0dp"/>
            <solid android:color="#10CCCCCC"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:top="0dp"
                android:right="0dp"
                android:bottom="2dp"
                android:left="0dp"/>
            <solid android:color="#20CCCCCC"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:top="0dp"
                android:right="0dp"
                android:bottom="2dp"
                android:left="0dp"/>
            <solid android:color="#30CCCCCC"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:top="0dp"
                android:right="0dp"
                android:bottom="2dp"
                android:left="0dp"/>
            <solid android:color="#50CCCCCC"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <!-- End of Drop Shadow Stack -->

    <!-- Border Stack-->
    <item
        android:id="@+id/receiptBorderColor">
        <shape
            android:shape="rectangle">
            <solid android:color="#66b3d9"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>

    <item
        android:top="1dp"
        android:right="1dp"
        android:left="1dp"
        android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <!-- End of Border Stack -->
</layer-list>